@model Product
<div class="modal-header">
    <h5 class="modal-title" id="staticBackdropLabel">Delete @Model.Title</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    Are you sure to delete @Model.Title?
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
    <a asp-action="ConfirmDelete" asp-controller="Products" asp-route-id="@Model.Id" type="button" class="btn btn-danger">Delete</a>
</div>